header

  .navbar
    background-color black
    border-radius 0px

  .navbar-brand
    display block
    padding-top 5px

    img
      size(40px)

  .nav

    li

      a
        color white
        transition all .2s ease-in-out

        &:hover
          color #f5f5f5
          background-color #4e4e4e

        &:visited
        &:focus
          color white
          background-color transparent

    & .active
        color #f5f5f5
        background-color #4e4e4e
